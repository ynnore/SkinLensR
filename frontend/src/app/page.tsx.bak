};


// --- COMPOSANT PRINCIPAL DE LA PAGE ---
// Ce composant reÃ§oit les props du Layout parent et les passe Ã  ses enfants.
export default function Page({ language = 'en' }: { language?: LanguageCode }) {
  const isLoggedIn = true;
  return (
    <>
